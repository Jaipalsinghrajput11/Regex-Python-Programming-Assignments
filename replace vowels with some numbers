input_str = input("Enter a string: ")
vowels = {'a': '0', 'e': '2', 'i': '3', 'o': '4', 'u': '1'}
replaced_str = ""
for char in input_str:
        if char.lower() in vowels:
            replaced_str += vowels[char.lower()]
        else:
            replaced_str += char
print(f"The replaced string is: {replaced_str}")
